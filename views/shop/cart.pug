extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if cartProducts.length > 0
            .grid
              each product in cartProducts
                  article.card.product-item
                      header.card__header
                          h1.product__title #{ product.productData.title }( #{ product.qty } )
                      div.card__image
                          img(src=product.productData.imageUrl, alt=product.productData.title)
                      div.card__content
                          h2.product__price $ #{ product.productData.price }
                          p.product__description #{ product.productData.description }
                      .card__actions
                          form.product-form(action="/delete-cart-product", method="POST")
                              input(type="hidden" name="id" value=product.productData.id)
                              button.btn(type="submit") delete

        else
            h1 There are no products in your cart
            .card__actions
                a.btn(href='/shop') Go Shopping
