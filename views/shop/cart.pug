extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if cartProducts.length > 0
            .grid
                each product in cartProducts
                    article.card.product-item
                        header.card__header
                            h1.product__title #{ product.title }( #{ product.cartItem.quantity } )
                        div.card__image
                            img(src=product.imageUrl, alt=product.title)
                        div.card__content
                            h2.product__price $ #{ product.price }
                            p.product__description #{ product.description }
                        .card__actions
                            form.product-form(action="/delete-cart-product", method="POST")
                                input(type="hidden" name="id" value=product.id)
                                button.btn(type="submit") Delete
            hr
            .centered
                form.centered(action="/orders", method="POST")
                    button.btn(type="submit") Order Now!

        else
            h1 There are no products in your cart
            .card__actions
                a.btn(href='/shop') Go Shopping
